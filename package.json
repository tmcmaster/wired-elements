{
  "name": "wired-elements",
  "version": "0.1.0",
  "description": "Collection of hand-drawn sketchy web components",
  "main": "wired-elements.js",
  "private": true,
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "bootstrap": "npm install",
    "dev": "polyserve --npm --module-resolution=node",
    "tsc": "tsc",
    "build": "rollup -c",
    "release": "mkdir -p release; cp CHANGELOG.md README.md LICENSE dist/wired-elements-bundle.js lib/wired-* release/",
    "bundle": "npm run tsc && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wiredjs/wired-elements.git"
  },
  "keywords": [
    "webcomponent",
    "web component",
    "rough",
    "sketchy",
    "hand-drawn",
    "hand drawn",
    "wireframe"
  ],
  "author": "Tim McMaster",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tmcmaster/wired-elements/issues"
  },
  "homepage": "https://github.com/tmcmaster/wired-elements#readme",
  "devDependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.7",
    "lerna": "^3.13.4",
    "polyserve": "^0.27.15",
    "rollup": "^0.66.6",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "^4.0.1",
    "tslint": "^5.15.0",
    "typescript": "^3.4.1"
  },
  "dependencies": {
    "@material/mwc-icon": "^0.5.0",
    "@polymer/app-layout": "^3.0.2",
    "@polymer/iron-pages": "^3.0.1",
    "roughjs": "^3.1.0"
  }
}
